{
  "name": "capacitor-zeroconf",
  "version": "3.0.0",
  "description": "Capacitor ZeroConf plugin",
  "main": "dist/plugin.cjs.js",
  "module": "dist/esm/index.js",
  "types": "dist/esm/index.d.ts",
  "unpkg": "dist/plugin.js",
  "files": [
    "android/src/main/",
    "android/build.gradle",
    "dist/",
    "ios/Plugin/",
    "CapacitorZeroconf.podspec",
    "electron",
    "scripts/patch-gradle.js"
  ],
  "author": "Marco Marche",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/trik/capacitor-zeroconf.git"
  },
  "bugs": {
    "url": "https://github.com/trik/capacitor-zeroconf/issues"
  },
  "keywords": [
    "capacitor",
    "plugin",
    "native",
    "network",
    "zeroconf",
    "bonjour",
    "mdns",
    "service",
    "discovery"
  ],
  "scripts": {
    "verify": "yarn verify:ios && yarn verify:android && yarn verify:web",
    "verify:ios": "cd ios && pod install && xcodebuild -workspace Plugin.xcworkspace -scheme Plugin && cd ..",
    "verify:android": "node scripts/check-java.js && cd android && (if exist gradlew.bat (gradlew.bat clean build test) else (./gradlew clean build test)) && cd ..",
    "verify:web": "yarn build",
    "lint": "yarn eslint && yarn prettier --check && yarn swiftlint lint",
    "fmt": "yarn eslint --fix && yarn prettier --write && yarn swiftlint --config .swiftlint.yml --fix --format",
    "eslint": "eslint . --ext ts",
    "prettier": "prettier \"**/*.{css,html,ts,js,java}\" --plugin=prettier-plugin-java",
    "swiftlint": "node-swiftlint",
    "docgen": "docgen --api ZeroConfPlugin --output-readme README.md --output-json dist/docs.json",
    "clean": "rimraf ./dist",
    "build": "npm run clean && npm run docgen && tsc && rollup -c rollup.config.mjs",
    "sync": "npm run build && npx cap sync && npm run postcap",
    "postinstall": "patch-package && node scripts/patch-gradle.js",
    "postcap": "node scripts/patch-gradle.js"
  },
  "devDependencies": {
    "@capacitor/android": "^7.0.0",
    "@capacitor/cli": "^7.0.0",
    "@capacitor/core": "^7.0.0",
    "@capacitor/docgen": "^0.3.0",
    "@capacitor/ios": "^7.0.0",
    "@ionic/eslint-config": "^0.4.0",
    "@ionic/swiftlint-config": "^2.0.0",
    "@types/bonjour": "^3.5.10",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "bonjour": "^3.5.0",
    "eslint": "^8.57.0",
    "make-dir-cli": "^3.1.0",
    "patch-package": "^8.0.0",
    "prettier": "^3.4.2",
    "prettier-plugin-java": "^2.6.6",
    "rimraf": "^6.0.1",
    "rollup": "^4.30.1",
    "swiftlint": "^2.0.0",
    "typescript": "~4.9.5"
  },
  "peerDependencies": {
    "@capacitor/core": ">=7.0.0",
    "bonjour": "^3.5.0"
  },
  "swiftlint": "@ionic/swiftlint-config",
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ]
  },
  "capacitor": {
    "ios": {
      "src": "ios"
    },
    "android": {
      "src": "android"
    }
  },
  "overrides": {
    "@capacitor/android": {
      "java.version": "17"
    }
  }
}
